
{
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
      "js": "node"
    },
    "events": {
      "restart": "'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "watch": [
      "test/fixtures/",
      "index.js",
      "test/samples/",
      "views/",
      "views/layouts/",
      "views/partials/",
      "dianaDataEnrich.js"
    ],
    "env": {
      "NODE_ENV": "development"
    },
   
    "ext": "js, css, hbs"
  }